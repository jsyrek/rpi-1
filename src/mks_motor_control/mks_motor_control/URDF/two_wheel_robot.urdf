<?xml version="1.0"?>
<robot name="two_wheel_robot">

  <!-- Podwozie -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.5 0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- Lewe koło -->
  <link name="left_wheel_link">
    <visual>
      <geometry>
        <cylinder radius="0.0425" length="0.01"/>
      </geometry>
    </visual>
  </link>

  <!-- Prawe koło -->
  <link name="right_wheel_link">
    <visual>
      <geometry>
        <cylinder radius="0.0425" length="0.01"/>
      </geometry>
    </visual>
  </link>

  <!-- Joint lewe koło -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.09 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Joint prawe koło -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.09 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>

